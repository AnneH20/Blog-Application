<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .banner {
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .banner-title {
            margin: 0;
            font-size: 24px;
        }
        .article-header {
            margin-bottom: 15px;
        }
        .article-title a {
            text-decoration: none;
            color: #007BFF;
        }
        .article-title a:hover {
            text-decoration: underline;
        }
        .article-meta {
            font-size: 14px;
            color: #555;
        }
        .article-description {
            margin: 10px 0;
        }
        .nav-tabs {
            display: flex;
            justify-content: space-between;
            background-color: #333;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        .nav-tabs a {
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            font-size: 16px;
        }
        .nav-tabs a:hover {
            background-color: #555;
        }
        .nav-tabs .active {
            background-color: #007BFF;
        }
        .search-bar {
            margin-left: auto;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 16px;
        }
    </style>
</head>
<body>

<div class="container">
    {{#banner}}
        <section>
            <header class="banner">
                <h2 class="banner-title">{{title}}</h2>
                <div class="banner-content">{{content}}</div>
            </header>
        </section>
    {{/banner}}

    <!-- Navigation Tabs -->
    <div class="nav-tabs">
        <a href="/home" class="{{#isHome}}active{{/isHome}}">Home</a>
        <a href="/articles" class="{{#isArticles}}active{{/isArticles}}">Articles</a>
        <a href="/users" class="{{#isUsers}}active{{/isUsers}}">Users</a>
        <form action="/search" method="get" style="display: flex; align-items: center;">
            <input type="text" name="query" placeholder="Search..." class="search-bar">
            <button type="submit">Search</button>
        </form>
    </div>

    <div id="search-results" class="search-results"></div>

    <div class="articles">
        {{#articles}}
            <section>
                <header class="article-header">
                    <h2 class="article-title"><a href="/article/{{slug}}">{{title}}</a></h2>
                    <div class="article-meta">By <strong>{{author.firstName}} {{author.lastName}}</strong>, on <strong>{{addedAt}}</strong></div>
                </header>
                <div class="article-description">
                    {{headline}}
                </div>
            </section>
        {{/articles}}

        {{^articles}}
            <p>No articles found.</p>
        {{/articles}}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('search-bar');
        const searchResultsContainer = document.getElementById('search-results');

        searchInput.addEventListener('input', function() {
            const query = searchInput.value;

            if (query.length > 0) {
                fetch(`/search?query=${encodeURIComponent(query)}&page=${window.location.pathname.split('/')[1]}`)
                        .then(response => response.json())
                        .then(data => {
                            searchResultsContainer.innerHTML = '';

                            if (data.articles) {
                                data.articles.forEach(article => {
                                    const articleElement = document.createElement('div');
                                    articleElement.classList.add('search-result-item');
                                    articleElement.innerHTML = `<h4><a href="/article/${article.slug}">${article.title}</a></h4><p>${article.content.substring(0, 100)}...</p>`;
                                    searchResultsContainer.appendChild(articleElement);
                                });
                            }

                            if (data.users) {
                                data.users.forEach(user => {
                                    const userElement = document.createElement('div');
                                    userElement.classList.add('search-result-item');
                                    userElement.innerHTML = `<p>${user.firstName} ${user.lastName}</p>`;
                                    searchResultsContainer.appendChild(userElement);
                                });
                            }
                        });
            } else {
                searchResultsContainer.innerHTML = '';
            }
        });
    });
</script>

</body>
</html>